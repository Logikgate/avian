doctype html
html(lang="en")
    head
        meta(name="viewport", content="width=device-width, initial-scale=1")

        title Avian Vuetify Example

        // Index Style

        link(href="/node_modules/vuetify/dist/vuetify.min.css", rel="stylesheet")
        style
            include:less index.style.less

    body

        // Index Vuetfiy Application

        avian-vuetify-example#app

            v-app(dark)
                v-toolbar.blue
                    h1 Avian Vuetify Example

                v-content(fluid)

                    // Server-Side Storage Object Rendering
                    if objects
                        each object, index in objects
                            if object.containers
                                each container, index in object.containers
                                    v-container
                                        h1(style="color:white;") hello

                v-footer(fluid)

    // Index Component
    script(src="/node_modules/jquery/dist/jquery.min.js")
    script(src="/node_modules/vue/dist/vue.js")
    script(src="/node_modules/vuetify/dist/vuetify.js")
    script
        include:typescript index.component.ts



