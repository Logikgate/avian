{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"strict": true,
		"target": "es2021",
		"module": "Node16",
		"moduleResolution": "Node16",
		"removeComments": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist",
		"lib": ["es2021", "dom"],
		"allowSyntheticDefaultImports": true,
		"rootDirs": [
			"src",
			"spec"
		]
	},
	"files": [
		"./src/avian.cli.ts",
		"./src/avian.lib.ts"
	]
}
